<Configuration xmlns="http://itude.com/schemas/MB/2.0">
	<Controller>
        <Wiring>
            <Outcome origin="*" name="OUTCOME-page_home" action="GetHomePageContent"/>
            <Outcome origin="GetHomePageContent" name="OUTCOME-page_home" action="PAGE-page_home" transferDocument="TRUE"/>
            
            <Outcome origin="*" name="OUTCOME-page_minimovies" action="GetMinimovies"/>
            <Outcome origin="GetMinimovies" name="OUTCOME-page_minimovies" action="PAGE-page_minimovies" transferDocument="TRUE"/>
            
            <Outcome origin="*" name="OUTCOME-page_login" action="PAGE-page_login"/>
            <Outcome origin="PAGE-page_login" name="OUTCOME-page_login" action="LoginAction"/>
            <Outcome origin="LoginAction" name="OUTCOME-page_login_failed" action="PAGE-page_login_failed" transferDocument="TRUE"/>
            <Outcome origin="LoginAction" name="OUTCOME-page_login_succeeded" action="PAGE-page_login_succeeded" transferDocument="TRUE"/>
            
            <Outcome origin="*" name="OUTCOME-page_logout" action="LogoutAction"/>
            
            <Outcome origin="*" name="OUTCOME-page_privacy_policy" action="PAGE-page_privacy_policy"/>
        </Wiring>
    </Controller>
</Configuration>