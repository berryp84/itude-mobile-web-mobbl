<Configuration xmlns="http://itude.com/schemas/MB/2.0">
	<View>
		<Page xmlns="" name="PAGE-page_home" document="HomePageContentDocument" title="HomePage">
            <Panel type="SECTION" title="TestTitle2">
				<ForEach value="/testgroup[0]/testitem" suppressRowComponent="TRUE">
					<Field type="LABEL" path="./testelement[0]/@text()"/>
				</ForEach>
				<Panel type="MOREROW" title="Login">
                  	<Field type="LINK" outcome="OUTCOME-page_login" path="."/>
				</Panel>
            </Panel>
        </Page>
		<Page xmlns="" name="PAGE-page_login" document="LoginUserDocument" title="Login">
            <Panel type="LIST">
				
					<Field type="LABEL" label="Login" style="header"/>
					<Field type="LABEL" label="Username" style="ROW-CONTENT"/>
					<Field type="INPUTFIELD" path="/LoginUser[0]/@username" style="hundredPercentWidth"/>
					<Field type="LABEL" label="Password" style="ROW-CONTENT"/>
					<Field type="PASSWORDFIELD" path="/LoginUser[0]/@password" style="hundredPercentWidth"/>
					<Field type="BUTTON" label="Login" style="NETWORK" outcome="OUTCOME-page_login" path="."/>
				
            </Panel>
        </Page>
		<Page xmlns="" name="PAGE-page_login_succeeded" document="LoginUserDocument" title="Profile">
            <Panel type="LIST">
				<Panel>
					<Field type="LABEL" label="Profile" style="header"/>
				</Panel>
				<Panel type="ROW-CONTENT">
					<Field type="LABEL" label="Username" style="ROW-CONTENT"/>
					<Field type="LABEL" label=" " style="ROW-CONTENT"/>
					<Field type="LABEL" path="/LoginUser[0]/@username" style="ROW-CONTENT"/>
				</Panel>
				<Panel type="ROW-CONTENT">
                        <Field type="BUTTON" label="Continue" style="NETWORK" outcome="OUTCOME-page_home" path="."/>
				</Panel>
            </Panel>
        </Page>
		<Page xmlns="" name="PAGE-page_login_failed" document="MBEmptyDoc" title="LoginFailed">
            <Panel type="LIST">
				<Panel type="SECTION" title="LoginFailed">
					<Panel type="ROW">
						<Field type="LABEL" label="LoginFailedText" />
					</Panel>
                </Panel>
            </Panel>
        </Page>
s    </View>
</Configuration>