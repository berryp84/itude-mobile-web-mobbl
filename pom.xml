<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.itude.poms</groupId>
		<artifactId>itude-jenkins</artifactId>
		<version>1.0</version>
	</parent>
	<groupId>com.itude.mobile.web.mobbl</groupId>
	<artifactId>mobbl-core</artifactId>
	<version>0.0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Web Mobbl Core</name>
	<description>Web Mobbl Core</description>
	<url>http://www.itude.com</url>
	<inceptionYear>2011</inceptionYear>
	<developers>
		<developer>
			<name>Wiebe Elsinga</name>
			<id>w.elsinga</id>
			<roles>
				<role>Developer</role>
				<role>Contributor</role>
			</roles>
		</developer>
	</developers>
	
    <profiles>
        <profile>
			<id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>core-lib</module>
                <module>core-web</module>
            </modules>
        </profile>
        <profile>
            <id>release</id>
            <modules>
                <module>core-lib</module>
            </modules>
        </profile>
    </profiles>
	
	<scm>
		<connection>scm:svn:http://repo.itude.com/repos/mobbl-client/itude-mobile-web-mobbl/trunk</connection>
		<developerConnection>scm:svn:http://repo.itude.com/repos/mobbl-client/itude-mobile-web-mobbl/trunk</developerConnection>
		<url>http://svn/repo.itude.com/repos/mobbl-client/itude-mobile-web-mobbl/trunk</url>
	</scm>

	<build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.4.3</version>
                    <configuration>
                        <encoding>UTF-8</encoding>
                    </configuration>
                </plugin>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					    <encoding>UTF-8</encoding>
 					</configuration>
				</plugin>
            </plugins>
        </pluginManagement>
    </build>
    
    <properties>
    </properties>
    
</project>


          